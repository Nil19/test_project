{% block body %}
<section class="slider">
	<div class="container-fluid home-body">
		<div class="row">
			<h2>body</h2>
		</div>

		<!-- @nil Example how to print something from the data that I shared -->
		<div>
			<h4>Total Reviews = {{ reviews.total }}</h4>
		</div>
		<div>
			<h4>Total Services = {{ services.total}}</h4>
		</div>
	</div>
</section>	
<!-- About Page -->
<section class="about">
	<div class="container text-center">
		<div class="row">
			<div class="col-sm-12">
				<h1> {{ about.header.title }}</h1>
					<div class="row">
						<div class="col-sm-12">
							<h4>{{ about.header.subtitle }}</h4>
							<p> {{ about.section.content }} </p>

						</div>
					</div>
			</div>
		</div>			
	</div>
</section>
<!-- End About Page -->

<!-- Services Page -->
<section>
	<div class="container">
		<div class="row">
			<div class="col-md-4">
				<h2>SERVICES</h2>
			</div>
		<div class="row">
				{% for services in services.data %}
					<h4>{{services.header.title}}</h4>
					<p>{{ services.header.subtitle |striptags | slice(0, 200) | raw}}</p>
				{% endfor %}
			</div>
		</div>
	</div>				
</section>
{% endblock %}
