{% block body %}
<section class="slider">
	<div class="container-fluid home-body">
		<div class="row">
			<h2>body</h2>
		</div>

		<!-- @nil Example how to print something from the data that I shared -->
		<div>
			<h4>Total Reviews = {{ reviews.total }}</h4>
		</div>
		<div>
			<h4>Total Services = {{ services.total}}</h4>
		</div>
	</div>
</section>	
<br>
<br>
<!-- About Page -->
<section class="about">
	<div class="container text-center">
		<div class="row">
			<div class="col-sm-12">
				<h1> {{ about.header.title }}</h1>
					<div class="row">
						<div class="col-sm-12">
							<h4>{{ about.header.subtitle }}</h4>
							<p> {{ about.section.content }} </p>

						</div>
					</div>
			</div>
		</div>			
	</div>
</section>
<br>
<br>
<!-- End About Page -->

<!-- Services Page -->
<section>
	<div class="container text-center">
		<div class="row">
			<div class="col col-sm-12">
				<h2>SERVICES</h2>
			</div>
		<div class="row">
			{% for services in services.data %}
				<div class="col col-sm-4">
					<div class="row">
					<h4>{{services.header.title}}</h4>
					</div>
					<div class="row">
					<p>{{ services.header.subtitle |striptags | slice(0, 191) | raw}}</p>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>			
</section>
{% endblock %}
<br>
<br>
<!-- End Services Page -->
<!-- Reviews Page -->
<section>
	<div class="container text-center">
		<div class="row">
			<div class="col col-sm-12">
				<h2>REVIEWS</h2>
			</div>
		</div>
		<div class="row">
			{% for reviews in reviews.data.items %}
				<div class="col-sm-4">
					<div class="row">
						<h4>{{reviews.content.title}}</h4>
					</div>
					<br>
					<div class="row">
						<p>{{reviews.content.content}}</p>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>				
</section>
<br>
<br>
